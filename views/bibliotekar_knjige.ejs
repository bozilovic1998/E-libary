<!doctype html>
<html>
<head>
    <title>Bibliotekar - Knjige</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
    <link rel='stylesheet' href='/stylesheets/style_admin.css'>
</head>
<body>
    
<nav class="navbar">
    <span class="open-slide">
      <a href="#" onclick="openSlideMenu()">
        <svg width="30" height="30">
            <path d="M0,5 30,5" stroke="#fff" stroke-width="5"/>
            <path d="M0,14 30,14" stroke="#fff" stroke-width="5"/>
            <path d="M0,23 30,23" stroke="#fff" stroke-width="5"/>
        </svg>
      </a>
    </span>
    <ul class="navbar-nav">&nbsp;&nbsp;Bibliotekar - Knjige</ul>
</nav>

<div id="side-menu" class="side-nav">
    <a href="#" class="btn-close" onclick="closeSlideMenu()">&times;</a>
    <a href="/b_knjige" style="color: white; font-weight: bold; font-size: 20px;"><i class='fas fa-book-open text-white'></i>&nbsp; Knjige</a>
    <a href="/b_autori" style="font-size: 20px;"><i class="fas fa-pencil-alt text-white"></i>&nbsp; Autori</a>
    <a href="/b_logout" style="font-size: 20px;"><i class="fas fa-sign-out-alt"></i>&nbsp; Odjavi se</a>
</div>

<div class="container">
    <div class="row my-5 justify-content-end">
        <a class="btn text-white" href="/b_nova_knjiga" role="button">Dodaj knjigu</a>
    </div>
    <div class='table-responsive-sm'>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Naziv knjige</th>
                <th scope="col">Žanr</th>
                <th scope="col">Akcije</th>
            </tr>
            </thead>
            <tbody>
            <% data.forEach(function(i) { %>
                <tr>
                    <td><%= i.naziv%></td>
                    <td><%= i.zanr%></td>
                    <td>
                        <a href="/b_knjiga/<%= i.id%>" class="icon-btn text-primary" role="button"><i  class="fas fa-eye"></i></a>
                        <a href="/b_knjige/izmeni/<%= i.id%>" class="icon-btn text-warning" data-toggle="modal" data-target="#modaledit<%= i.id %>" role="button"><i class="fas fa-edit"></i></a>
                        <a href="/b_knjige/izbrisi/<%= i.id%>" onclick="return confirm('Da li ste sigurni da želite da obrišete navedenu knjigu?')" class="icon-btn text-danger" role="button"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                <div id="modaledit<%= i.id %>" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Knjiga - izmena</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                <div class="container">
                                    <div class="formholder">
                                        <form action="/b_knjige/izmeni/<%= i.id %>" method="POST">
                                            <div class="row form-group">
                                                <input type="hidden" name="id" value="<%= i.id%>"/>
                                                <input type="text" placeholder="Naziv knjige" name="naziv"value="<%= i.naziv%>">
                                                <i class="fas fa-book-open"></i>
                                            </div>
                                            <div class="row form-group">
                                                <input type="text" placeholder="Žanr" name="zanr" value="<%= i.zanr%>">
                                                <i class="fas fa-list"></i>
                                            </div>
                                            <div class="row form-group">
                                                <input type="text"  placeholder="Izdavač" name="izdavac" value="<%= i.izdavac%>">
                                                <i class="fas fa-th-list"></i>
                                            </div>
                                            <div class="row form-group">
                                                <input type="text"  placeholder="Broj strana" name="broj_strana" value="<%= i.broj_strana%>">
                                                <i class="fas fa-file-alt"></i>
                                            </div>
                                            <div class="row form-group">
                                                <input type="text"  placeholder="Godina izdavanja" name="godina_izdavanja" value="<%= i.godina_izdavanja%>">
                                                <i class="fas fa-calendar-alt"></i>
                                            </div>
                                            <div class="row form-group">
                                                <input type="text"  placeholder="Jezik" name="jezik" value="<%= i.jezik%>">
                                                <i class="fas fa-globe"></i>
                                            </div>
                                            <div class="row form-group">
                                                <select class="form-control custom-select" name="autor_id">
                                                    <option disabled selected>Autor</option>
                                                    <option>Marko Šelić</option>
                                                    <option>Danijel Mejson</option>
                                                    <option>Ivo Andrić</option>
                                                    <option>Meša Selimović</option>
                                                    <option>Peter Handke</option>
                                                </select>
                                            </div>
                                            <div class="row form-group">
                                                <button type="submit" class="btn text-white">Sačuvaj</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn-default" data-dismiss="modal" style="border: none; outline: none;">Otkaži</button>
                            </div>
                        </div>
                    </div>
                </div>
            </tbody>
            <% }) %>
        </table>
    </div>
</div>


<script type="text/javascript" src="javascripts/bibliotekar_script.js"></script>
<script type="text/javascript" src="/jquery.js"></script>
<script type="text/javascript" src="js/bootstrap.js"></script>
</body>
</html>


